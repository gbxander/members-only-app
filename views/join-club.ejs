                            <div class="join-input">
                                <input name="password" type="password" required>
                            </div>
                            <button name="submit">
                                Join
                            </button>
                    </form>
                </div>
            </section>
        </section>

        <!-- Footer -->
        <%- include('./layouts/footer.ejs') %> 
        
    </body>
