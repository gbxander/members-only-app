<!doctype html>
<html lang="en">
    <%- include('./layouts/head.ejs') %>
    <body>
        <!-- Header -->
        <%- include('./layouts/nav.ejs') %> 
        
        <!-- Main section -->
        <section class="join-section">
                <div class="form-wrapper">
                    <h1>Want to join the club?</h1>
                    <div class="join-img">
                        <img src="http://localhost:3000/assets/images/chimpanzee-head.png" width="200" height="200">
                    </div>
                    
                    <form action="/join-club" method="post">
